            // Find the closest .example-post element
            const post = event.target.closest('.example-post');

            // Find the comments dropdown within the post
            const commentsDropdown = post.querySelector('.comments-dropdown');

            // Toggle the display of the comments dropdown
            if (commentsDropdown.style.display === 'none' || commentsDropdown.style.display === '') {
                commentsDropdown.style.display = 'block';
            } else {
                commentsDropdown.style.display = 'none';
            }
        });
