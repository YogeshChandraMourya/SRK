        const thumbCountElements = document.querySelectorAll('.thumb-count');

        thumbsUpIcons.forEach((icon, index) => {
            icon.addEventListener('click', function () {
                // Increment the count when thumbs up is clicked
                const count = parseInt(thumbCountElements[index].textContent, 10);
                thumbCountElements[index].textContent = count + 1;
            });
        });

        thumbsDownIcons.forEach((icon, index) => {
